{% use '../CommonAdmin/stylesheets.php.twig' %}
{% use '../CommonAdmin/javascripts.php.twig' %}
{% use '../CommonAdmin/ActionsTemplate/form.php.twig' %}
{% use '../CommonAdmin/ActionsTemplate/title.php.twig' %}

{{ echo_extends( builder.getBaseAdminTemplate ) }}

{{ echo_block("stylesheets") }}
    {{- block('complementary_stylesheets') -}}
{{ echo_endblock() }}

{{ echo_block("javascripts") }}
    {{- block('complementary_javascripts') -}}
{{ echo_endblock() }}

{{- block('site_title') -}}

{{ echo_block("body") }}
    {{- block('title') -}}

    <div class="row-fluid">
        {{ echo_twig("block('form_' ~ actionParams.action)") }}
    </div>
{{ echo_endblock() }}

{% for action in builder.ObjectActions %}    
{{ echo_block('form_' ~ action.name) }}
    {{- block('form') -}}
{{ echo_endblock() }}

{% endfor %}
